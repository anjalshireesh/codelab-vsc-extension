{
  "name": "codelab",
  "displayName": "CodeLab",
  "description": "A VSCode extension to help aid in training and lab exercises based on prebuilt environments",
  "publisher": "abenginerd",
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.55.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "CodeLab",
      "properties": {
        "codelab.openRelative": {
          "description": "Basis for opening file using relative path",
          "default": "File",
          "type": "string",
          "enum": [
            "File",
            "Workspace"
          ],
          "enumDescriptions": [
            "Relative to the currently opened markdown file",
            "Relative to the workspace folder currently opened"
          ]
        },
        "codelab.activateCodeLense": {
          "description": "Activate executable command CodeLenses",
          "default": true,
          "type": "boolean"
        },
        "codelab.interruptDelay": {
          "description": "Delay in ms between sending interrupt signal and new command to terminal",
          "default": 200,
          "type": "number"
        }
      }
    },
    "commands": [
      {
        "command": "codelab.preview",
        "category": "CodeLab",
        "title": "Open Preview",
        "icon": {
          "light": "./media/preview-light.svg",
          "dark": "./media/preview-dark.svg"
        }
      },
      {
        "command": "codelab.helloWorld",
        "category": "CodeLab",
        "title": "Hello World"
      },
      {
        "command": "codelab.copyToClipboard",
        "category": "CodeLab",
        "title": "Copy to Clipboard"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "editorLangId == markdown",
          "command": "codelab.preview",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "when": "editorLangId == markdown",
          "command": "codelab.preview",
          "group": "navigation"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "codelab.editor",
        "displayName": "CodeLab",
        "selector": [
          {
            "filenamePattern": "*.mdtl"
          }
        ],
        "priority": "default"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc-silent -p tsconfig.json --suppress 2304@node_modules/@shd101wyy/mume/out/src/",
    "watch": "tsc -watch -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "npx vsce package"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.55.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "ts-loader": "^9.2.2",
    "tsc-silent": "^1.2.1",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.0"
  },
  "dependencies": {
    "@shd101wyy/mume": "^0.6.7",
    "rxjs": "^7.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Lemao81/codelab-vsc-extension"
  }
}
